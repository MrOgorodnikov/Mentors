@model Mentors.Models.View.StudentView
@{
    Layout = null;
}

<!Doctype html>
<html>
<head>
    <title>
        @Model.Student.Name
    </title>
</head>
<body>
    <form method="post">
        <p>Name: <input type="text" name="Name" value="@Model.Student.Name" /> </p>
        <p>Surname:  <input type="text" name="Surname" value="@Model.Student.Surname" /></p>
        <p>Age: <input type="number" name="Age" value="@Model.Student.Age" /></p>

        <p>Country <input type="text" name="Country" value="@Model.Student.Country" /></p>
        <p>City <input type="text" name="City" value="@Model.Student.City" /></p>
        <p>StudyPlace <input type="text" name="StudyPlace" value="@Model.Student.StudyPlace" /></p>
        <p>Email <input type="text" name="Email" value="@Model.Student.Email" /></p>
        <p>Phone <input type="number" name="Phone" value="@Model.Student.Phone" /></p>
        <p>Vk <input type="text" name="Vk" value="@Model.Student.Vk" /></p>
        <p>Facebook <input type="text" name="Facebook" value="@Model.Student.Facebook" /></p>
        <p>LinkedIn <input type="text" name="LinkedIn" value="@Model.Student.LinkedIn" /></p>

        <p>Mentors:</p>
        @foreach (var mentor in Model.Mentors)
        {
            <p>@mentor.Name @mentor.Surname</p>
        }
        <p>Tecnologies: </p>
        @foreach (var tecnology in Model.AllTecnologies)
        {
            @tecnology.Name
            if (Model.StudentTecnologies.Contains(tecnology))
            {
                <input type="checkbox" name="@tecnology.Id" value="@tecnology.Name" checked />
            }
            else
            {
                <input type="checkbox" name="@tecnology.Id" value="@tecnology.Name" />

            }
        }

        <p><input type="submit" name="Submmit" />

    </form>
    



</body>
</html>
