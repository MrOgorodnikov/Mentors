@model IEnumerable<Mentors.Models.DTO.MentorTecnologyDTO>
@{ 
    Layout = null; 
}



<!Doctype html>
<html>
<head>
    <title>
        Mentors
    </title>
</head>
<body>
    <form action="DeleteMentor" method="post" id="form"></form>
    <table>
        <tr>
            <td>Id</td>
            <td>Name</td>
            <td>Surname</td>
            <td>Age</td>
            <td>Experience</td>
            <td>Work</td>
            <td>Students</td>
            <td>Max Students</td>
            <td>Tecnology</td>
            
            <td>Vk</td>
            <td>Facebook</td>
            <td>LinkedIn</td>
        </tr>

        @foreach (var mentor in Model)
        {
            
            <tr>
                <td>@mentor.Mentor.Id</td>
                <td>@mentor.Mentor.Name</td>
                <td>@mentor.Mentor.Surname</td>
                <td>@mentor.Mentor.Age</td>
                <td>@mentor.Mentor.ExperienceInYear</td>
                <td>@mentor.Mentor.PlaceOfWork</td>
                <td>@mentor.Mentor.CurrentStudentCount</td>
                <td>@mentor.Mentor.MaxStudentCount</td>
                <td>@mentor.Tecnology.Name</td>
                
                
                <td>@mentor.Mentor.Vk</td>
                <td>@mentor.Mentor.Facebook</td>
                <td>@mentor.Mentor.LinkedIn</td>
                <td><a href="~/Home/ChangeMentorInfo/@mentor.Mentor.Id">Change</a></td>
               <td>
                    <form action="DeleteMentor" method="post">
                        <input type="hidden" name="mentorId" value="@mentor.Mentor.Id" />
                        <input type="submit" value="Delete"/>
                   </form>
               </td>
                
               
            </tr>
        }
    </table>
    <p><a href="~/Home/AddMentor">Add new Mentor</a></p>
</body>
</html>   